<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.fsu.cs.mobile.ontime.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="503dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nextClassTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="93dp"
            android:text="Next Class"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/upcomingClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/nextFoodBreakTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Food Break"
            android:layout_marginTop="41dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/upcomingFoodBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:text="" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>